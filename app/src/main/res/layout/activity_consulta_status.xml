<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ifpi.edu.br.saudeacomp.activities.ConsultaStatusActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar Status"
        android:textSize="8pt"
        android:layout_gravity="center_horizontal"/>

    <Spinner
        android:id="@+id/muda_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/mudastatus"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textSize="7pt"
        />
    <EditText
        android:id="@+id/resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="digite o resultado:"
        android:textSize="7pt"/>

    <Button
        android:onClick="statusClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mudar status"
        android:textSize="7pt"/>

</LinearLayout>
